{
  "name": "infra-as-node",
  "private": true,
  "version": "0.0.0",
  "repository": "https://github.com/lukehedger/infra-as-node.git",
  "author": "lukehedger <lh4@pm.me>",
  "license": "MIT",
  "scripts": {
    "build": "yarn workspaces run build",
    "build-infra": "yarn build && yarn --cwd infrastructure synth",
    "deploy-pipeline": "yarn --cwd pipeline build && yarn --cwd pipeline deploy",
    "dev": "build-infra && sam local start-api --template infrastructure-local/cdk.out/InfrastructureStack.template.json",
    "test": "yarn workspaces run test"
  },
  "workspaces": [
    "dlq-consumer",
    "infrastructure",
    "infrastructure-local",
    "kinesis-consumer",
    "kinesis-producer",
    "pipeline"
  ]
}
